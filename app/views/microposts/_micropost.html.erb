<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.app.helper.microposts_helper.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t".time1" %> <%= time_ago_in_words(micropost.created_at) %> <%= t".time2" %>.
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete_hyperlink"), micropost, method: :delete, data: {confirm: t(".delete_confirm_message")} %>
    <% end %>
  </span>
</li>
